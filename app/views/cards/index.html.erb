<div class="title" id="all_cards_title">
  <h1>All Cards</h1>
</div>

<% if flash[:error]  %>
  <div id="error"><%= flash[:error] %></div>
<% end %>

<% if flash[:notice]  %>
  <div id="notice"><%= flash[:notice] %></div>
<% end %>


<%= 
    grid(@card_grid) do |g|
       g.column name: 'Name' do |p|
         p.name
       end
       g.column name: 'Text' do |p|
         p.text
       end
    end
 %>






<table>
  <thead>
    <tr>
      <th>Cost</th>
      <th>Name</th>
      <th>Type</th>
      <th>Rarity</th>
      <th>Set</th>
      <th>Attack</th>
      <th>Health</th>
      <th>Durability</th>
      <th>Text</th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <div id= "<%= "#{card.name}" %>" >
        <tr>
          <td>
            <%= card.cost %>
          </td>
          <td> 
            <%= link_to card.name, root_url + card.getIdPath %>
          </td>
          <td> 
            <%= card.card_type %>
          </td>

          <td>
            <font <%= "color= " + card.getRarityHexColour %> >
             <%= card.getRarityName %>
            </font>
          </td>

           <td>
             <%= card.getCardSetName %>
          </td>

          <td> 
            <%= card.attack %>
          </td>
          
          <td> 
            <%= card.health %>
          </td>

          <td> 
            <%= card.durability %>
          </td>

          <td> 
            <%= raw card.text %>
          </td>
        </tr>
      </div>
    <% end %>
  </tbody>
</table>

<br>