.page-title-area
  .page-title#all_cards_title
    All Cards
.card-area
  %ul.cards
    - @cards.each do |card|
      %li.card-box{ id: "#{ card.id }-box", onclick: "location.href='#{ root_url + card.path }';", style: 'cursor: pointer;' }
        .card-box-name
          = link_to card.name, root_url + card.path
        .card-box-info{ id: "#{ card.id }-info" }
          %span{ class: "#{ card.rarity.name.downcase }-text" }
            #{ card.short_description }
        .card-box-stats