<p id="notice"><%= notice %></p>

<h1>Listing Player Classes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_classes.each do |player_class| %>
      <tr>
        <td><%= link_to 'Show', player_class %></td>
        <td><%= link_to 'Edit', edit_player_class_path(player_class) %></td>
        <td><%= link_to 'Destroy', player_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

